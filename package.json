    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0"
  },
  "browserslist": [
    "last 1 version"
  ],
  "files": [
    "**/*.js",
    "**/*.cjs",
